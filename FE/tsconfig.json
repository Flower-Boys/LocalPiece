{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",             
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "vite/client"],
    "esModuleInterop": true,
    "strict": true                 
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
